{
  "functions": {
    "api/gerar-post.js": {
      "maxDuration": 30
    },
    "api/gerar-post-automatico.js": {
      "maxDuration": 30
    },
    "api/link-preview.js": {
      "maxDuration": 20
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "pechintech.com.br"
        }
      ],
      "destination": "https://www.pechintech.com.br/:path*",
      "permanent": true
    }
  ]
}

